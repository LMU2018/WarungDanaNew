<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layoutItemCustomer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/imgbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:contentDescription="@null"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/oval"
            />
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/imgList"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_toStartOf="@+id/kotakLaknat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imgbox">


        <TextView
            android:id="@+id/tvItemNama"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvItemBrosur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvItemDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/kotakLaknat"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true">


        <TextView
            android:id="@+id/tvItemStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvItemTanggal"
            android:textColor="#4b4b4b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

</RelativeLayout>