<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/kotakItemJadwal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:id="@+id/tvJamJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#4b4b4b"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sampai"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSelesaiJadwal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp"
            android:textColor="#4b4b4b"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical">
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/imgJadwalIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/oval"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#4b4b4b"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvKategoriJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4b4b4b"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_access_time_black_24dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvDurasiJadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_location_on_black_24dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvAlamatJadwal"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/kotakNoteJadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >
            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_event_note_black_24dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="top"/>
            <TextView
                android:id="@+id/tvNoteJadwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

        </LinearLayout>
    </LinearLayout>





</LinearLayout>