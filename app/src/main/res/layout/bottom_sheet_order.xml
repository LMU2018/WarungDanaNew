<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="25dp"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/bsTaksasi"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:contentDescription="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_otr_taksasi"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taksasi"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bsDocument"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:contentDescription="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_add_a_photo_black_24dp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Document"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bsNote"
        android:layout_weight="1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:contentDescription="@null"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                />
            <ImageView
                android:contentDescription="@null"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_description_black_24dp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>